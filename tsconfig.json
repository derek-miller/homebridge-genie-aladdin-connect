{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2020", "es2021"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": ["src/"],
  "exclude": ["**/*.spec.ts"]
}
